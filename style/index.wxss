.banner_display {
  width: 100%;
}
.platform {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 190px;
}
.platform .platform_tab_area {
  width: 160px;
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 17px;
  color: #606060;
  border-right: 1px dotted #CCCCCC;
  position: relative;
}
.platform .platform_tab_area img {
  width: 64px;
  height: 64px;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -32px;
  margin-top: -32px;
  z-index: 1000;
}
.platform .platform_tab_area .active {
  display: none;
}
.platform .platform_tab_area .other {
  font-size: 24px;
  margin: 0;
}
.platform .platform_tab_area text {
  margin-top: 100px;
}
.platform .active {
  color: #ED4500;
}
.pic_display {
  display: flex;
  justify-content: center;
  margin-top: 30px;
  flex: 0 1 auto;
}
.pic_display figure {
  margin-left: 28px;
  text-align: center;
  border: 1px solid #E3E3E3;
  padding-bottom: 25px;
  width: 24%;
  max-width: 278px;
}
.pic_display figure img {
  width: 100%;
  margin-bottom: 10px;
}
.more_pic {
  margin-top: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.more_pic span {
  position: absolute;
}
.about_us {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 30px;
  margin-bottom: 30px;
}
.about_us span:nth-of-type(1) {
  color: #686868;
  line-height: 34px;
  font-size: 20px;
}
.about_us span:nth-of-type(2) {
  background-image: -webkit-linear-gradient(bottom, #F88A6B, #5B3752);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 34px;
  font-size: 25px;
  font-weight: bold;
}
.actical_video {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  width: 62%;
  margin: 30px auto;
}
.actical_video img {
  width: 565px;
}
.actical_video .artical_area {
  width: 592px;
  margin-left: 36px;
}
.actical_video span {
  width: 600px;
}
.actical_video span:nth-of-type(1) {
  display: block;
  background-image: -webkit-linear-gradient(bottom, #F88A6B, #5B3752);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-size: 27px;
  font-weight: bold;
  line-height: 98px;
}
.actical_video span:nth-of-type(2) {
  color: #333333;
  font-size: 14px;
  line-height: 40px;
  display: block;
}
.actical_video span:nth-of-type(2) a {
  color: #ED4500 ;
  font-size: 14px;
  display: inline;
}
.toggle_display {
  width: 60%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  margin-bottom: 70px;
}
.toggle_display .display_box {
  width: 320px;
  height: 70px;
  border: 1px solid #B9B9B9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: #767676;
}
.toggle_display .display_box:hover {
  color: #ED4500;
}
.fix_bg {
  width: 100%;
  position: relative;
}
.fix_bg .show_pic {
  width: 100%;
  margin: 0 auto;
  display: block;
}
.black_box {
  background-color: #000;
  width: 100%;
  color: #FFFFFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 70px 0;
  margin-top: 120px;
}
.black_box .eng_span {
  font-size: 20px;
  font-family: 'STZhongsong Regular';
  line-height: 34px;
}
.black_box .cn_span {
  font-size: 25px;
  line-height: 34px;
  font-weight: bold;
}
.black_box .info_msg {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.black_box .info_msg .left,
.black_box .info_msg .right {
  display: flex;
}
.black_box .info_msg .left .leftmgs .infomation_msg,
.black_box .info_msg .right .leftmgs .infomation_msg {
  font-size: 20px;
  line-height: 34px;
}
.black_box .info_msg .left .leftmgs div,
.black_box .info_msg .right .leftmgs div {
  font-size: 14px;
  width: 284px;
  line-height: 36px;
}
.black_box .info_msg .left .righmsg .more_dot,
.black_box .info_msg .right .righmsg .more_dot {
  color: #ED4500;
  font-size: 30px;
  font-weight: bold;
  text-align: center;
  line-height: 30px;
}
.black_box .info_msg .left .righmsg .time_msg,
.black_box .info_msg .right .righmsg .time_msg {
  font-size: 14px;
  line-height: 36px;
}
.black_box .info_msg .right {
  margin-left: 100px;
}
.bg_img {
  width: 100%;
  height: 500px;
  background-position: center;
  background-repeat: no-repeat;
  background-image: url(../image/index/bg1.png);
}
.bg_img .four_img {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.bg_img img {
  max-width: 342px;
  width: 24%;
}
