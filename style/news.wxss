.banner_img {
  width: 100%;
}
.tab_trance {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30px;
}
.tab_trance .left,
.tab_trance .right {
  width: 143px ;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-size: 20px;
  border: 1px solid #D2D2D2;
  box-sizing: border-box;
}
.tab_trance .left {
  border-right: none;
}
.tab_trance .right {
  border-left: none;
}
.tab_trance .active {
  border: none;
  background-color: #F67605;
  color: #ffffff;
}
.new_out_box {
  display: flex;
  align-items: center;
  height: 220px;
  width: 1150px;
  padding: 10px;
  margin: 20px auto;
}
.new_out_box img {
  width: 250px;
  height: 165px;
}
.new_out_box .new_info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10px;
  width: 100%;
}
.new_out_box .new_info span {
  margin: 10px 0;
}
.new_out_box .new_info span:nth-of-type(1) {
  color: #0E3F6F;
  font-size: 18px;
}
.new_out_box .new_info span:nth-of-type(2) {
  color: #969696;
  font-size: 12px;
}
.new_out_box .new_info span:nth-of-type(3) {
  color: #646464;
  font-size: 14px;
}
.new_out_box .new_info .find_more {
  width: 100px;
  height: 30px;
  font-size: 15px;
  line-height: 30px;
  border: 1px solid #E6E6E6;
  text-align: center;
}
.new_out_box .new_info .find_more:hover {
  color: #ffffff;
  background-color: #F67605;
}
.tab_check {
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab_check div {
  padding: 10px;
  font-size: 12px;
  background-color: #E6E6E6;
  color: #969696;
  margin-left: 10px;
}
.tab_check div:hover {
  color: #ffffff;
  background-color: #F67605;
}
.tab_check .active {
  color: #ffffff;
  background-color: #F67605;
}
.tab_check .dot {
  background-color: #ffffff !important;
}
